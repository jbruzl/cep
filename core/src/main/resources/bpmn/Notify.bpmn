  <process id="Notify" name="Notify" isExecutable="true">
    <startEvent id="startevent1" name="Start"></startEvent>
    <scriptTask id="verifyenablednotification1" name="Verify Enabled Notification" scriptFormat="groovy" activiti:autoStoreVariables="true">
      <script>notificationEnabled = true</script>
    </scriptTask>
    <sequenceFlow id="flow1" sourceRef="startevent1" targetRef="verifyenablednotification1"></sequenceFlow>
    <exclusiveGateway id="notificationeabled1" name="Notifivation enabled?"></exclusiveGateway>
    <sequenceFlow id="flow2" sourceRef="verifyenablednotification1" targetRef="notificationeabled1"></sequenceFlow>
    <endEvent id="notificationdisabled1" name="Notification disabled"></endEvent>
    <sequenceFlow id="flow4" name="Disabled" sourceRef="notificationeabled1" targetRef="notificationdisabled1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${notificationEnabled == false}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="flow5" name="Enabled" sourceRef="notificationeabled1" targetRef="parallelgateway1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${notificationEnabled == true}]]></conditionExpression>
    </sequenceFlow>
    <parallelGateway id="parallelgateway1" name="Exclusive Gateway"></parallelGateway>
    <callActivity id="callsendsms1" name="Send SMS" calledElement="SendSMS">
      <extensionElements>
        <activiti:in sourceExpression="${messageSMS}" target="message"></activiti:in>
        <activiti:in sourceExpression="${receiversSMS}" target="receivers"></activiti:in>
        <activiti:in sourceExpression="${messageTypeSMS}" target="messageType"></activiti:in>
      </extensionElements>
    </callActivity>
    <parallelGateway id="parallelgateway2" name="Exclusive Gateway"></parallelGateway>
    <sequenceFlow id="flow12" sourceRef="callsendsms1" targetRef="parallelgateway2"></sequenceFlow>
    <subProcess id="preparesms1" name="Prepare SMS">
      <startEvent id="startpreparesms2" name="Start Prepare SMS"></startEvent>
      <endEvent id="endevent1" name="End"></endEvent>
      <serviceTask id="obtainsmscontacts1" name="Obtain SMS Contacts" activiti:expression="${subscriptionService.getContacts(publisherCode, contactType)}" activiti:resultVariableName="receiversSMS"></serviceTask>
      <sequenceFlow id="flow25" sourceRef="preparesmsmessage3" targetRef="obtainsmscontacts1"></sequenceFlow>
      <serviceTask id="preparesmsmessage3" name="Prepare SMS Message" activiti:class="cz.muni.fi.cep.core.bpmn.servicetask.LoadTemplateTask"></serviceTask>
      <sequenceFlow id="flow26" sourceRef="startpreparesms2" targetRef="preparesmsinputs1"></sequenceFlow>
      <sequenceFlow id="flow27" sourceRef="preparesmsinputs1" targetRef="preparesmsmessage3"></sequenceFlow>
      <scriptTask id="preparesmsinputs1" name="Prepare SMS Inputs" scriptFormat="groovy" activiti:autoStoreVariables="true">
        <script>
      		contactType = cz.muni.fi.cep.api.DTO.ContactType.SMS
      		resource = 'templates/sms/'+templateKey
			templatePath = this.getClass().getResource( resource )
			
      	</script>
      </scriptTask>
      <sequenceFlow id="flow28" sourceRef="obtainsmscontacts1" targetRef="verifysms1"></sequenceFlow>
      <sequenceFlow id="flow29" sourceRef="verifysms1" targetRef="endevent1"></sequenceFlow>
      <scriptTask id="verifysms1" name="Verify SMS" scriptFormat="groovy" activiti:autoStoreVariables="true">
        <script>
      		messageSMS = template
      		messageTypeSMS = messageType

      	</script>
      </scriptTask>
    </subProcess>
    <sequenceFlow id="flow13" sourceRef="parallelgateway1" targetRef="preparesms1"></sequenceFlow>
    <sequenceFlow id="flow14" sourceRef="preparesms1" targetRef="callsendsms1"></sequenceFlow>
    <subProcess id="preparemail1" name="Prepare Mail">
      <startEvent id="startpreparemail3" name="Start Prepare Mail"></startEvent>
      <scriptTask id="preparemailmessage1" name="Prepare Mail Message" scriptFormat="groovy" activiti:autoStoreVariables="true">
        <script>
     	sender = "sender@localhost.com"
		contactType = cz.muni.fi.cep.api.DTO.ContactType.EMAIL
    	resource = 'templates/mail/'+templateKey
		templatePath = this.getClass().getResource( resource )
		
		</script>
      </scriptTask>
      <sequenceFlow id="flow20" sourceRef="startpreparemail3" targetRef="preparemailmessage1"></sequenceFlow>
      <sequenceFlow id="flow21" sourceRef="preparemailmessage1" targetRef="preparemailmessage3"></sequenceFlow>
      <endEvent id="endevent2" name="End"></endEvent>
      <sequenceFlow id="flow22" sourceRef="verifymail1" targetRef="endevent2"></sequenceFlow>
      <serviceTask id="obtainmailcontacts2" name="Obtain Mail Contacts" activiti:expression="${subscriptionService.getContacts(publisherCode, contactType)}" activiti:resultVariableName="receiversEmail"></serviceTask>
      <serviceTask id="preparemailmessage3" name="Prepare Mail Message" activiti:class="cz.muni.fi.cep.core.bpmn.servicetask.LoadTemplateTask"></serviceTask>
      <sequenceFlow id="flow30" sourceRef="preparemailmessage3" targetRef="obtainmailcontacts2"></sequenceFlow>
      <sequenceFlow id="flow31" sourceRef="obtainmailcontacts2" targetRef="verifymail1"></sequenceFlow>
      <scriptTask id="verifymail1" name="Verify Mail" scriptFormat="groovy" activiti:autoStoreVariables="true">
        <script>
      		messageMail = template
      		messageTypeMail = messageType
      		
      		mailList = ""
      		for(	mail in receiversEmail){
				mailList = mailList + mail + ","
			}
      	</script>
      </scriptTask>
    </subProcess>
    <sequenceFlow id="flow16" sourceRef="parallelgateway1" targetRef="preparemail1"></sequenceFlow>
    <endEvent id="endevent3" name="End"></endEvent>
    <sequenceFlow id="flow23" sourceRef="parallelgateway2" targetRef="endevent3"></sequenceFlow>
    <serviceTask id="sendmail1" name="Send Mail" activiti:type="mail">
    	<extensionElements>
	        <activiti:field name="to">
	          <activiti:expression>${mailList}</activiti:expression>
	        </activiti:field>
	        <activiti:field name="from">
	          <activiti:expression>${sender}</activiti:expression>
	        </activiti:field>
	        <activiti:field name="subject">
	          <activiti:string><![CDATA[Subject]]></activiti:string>
	        </activiti:field>
	        <activiti:field name="charset">
	          <activiti:string><![CDATA[utf-8]]></activiti:string>
	        </activiti:field>
	        <activiti:field name="html">
	          <activiti:expression>${messageMail}</activiti:expression>
	        </activiti:field>
      </extensionElements>
      </serviceTask>
    <sequenceFlow id="flow32" sourceRef="sendmail1" targetRef="parallelgateway2"></sequenceFlow>
    <sequenceFlow id="flow33" sourceRef="preparemail1" targetRef="sendmail1"></sequenceFlow>
  </process>
